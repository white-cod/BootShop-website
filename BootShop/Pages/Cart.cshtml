@page
@model BootShop.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Товар</th>
            <th>Количество</th>
            <th>Цена</th>
            <th>Всего</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Shoes.product_name</td>
                <td>@item.Quantity</td>
                <td>@item.Shoes.price ¥</td>
                <td>@(item.Quantity * item.Shoes.price) ¥</td>
                <td>
                    <form method="post" asp-page-handler="Remove" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Всего: @Model.CartTotal ¥</h3>